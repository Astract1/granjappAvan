<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuCompradorActivity">



    <TextView
        android:id="@+id/Bienvenidacomprador"
        android:layout_width="327dp"
        android:layout_height="66dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:text="@string/inciotxt"
        android:textColor="#545f71"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/infoComprador"
        android:layout_width="327dp"
        android:layout_height="66dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:text="@string/inicioinfotxt"
        android:textColor="#545f71"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/mapaComprador"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="300dp"
        android:src="@mipmap/mapa1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoEjemplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/puntosdeventatxt"
        app:layout_constraintStart_toStartOf="@id/mapaComprador"
        app:layout_constraintEnd_toEndOf="@id/mapaComprador"
        app:layout_constraintTop_toBottomOf="@id/mapaComprador"
        android:layout_marginTop="8dp"
        android:textColor="#545f71"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <ImageView
        android:id="@+id/chatComprador"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="300dp"
        android:src="@mipmap/chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoCompradorChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chattxt"
        android:textColor="#545f71"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/chatComprador"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@id/chatComprador"
        app:layout_constraintTop_toBottomOf="@id/chatComprador"
        app:layout_constraintVertical_bias="0.021" />


    <ImageView
        android:id="@+id/botonRegresarCodigoPrincipalComprador"
        android:layout_width="42dp"
        android:layout_height="57dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:contentDescription="@string/regresar"
        android:src="@mipmap/boton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divisor"
        android:layout_width="410dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="708dp"
        android:background="#36CC7C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/textoComprador"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/divisor"
        app:layout_constraintTop_toTopOf="@id/divisor" />

    <ImageView
        android:id="@+id/PerfilComprador"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="48dp"
        android:contentDescription="Perfil"
        android:src="@mipmap/perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>