<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/ImagenPuntoVenta"
            android:layout_width="85dp"
            android:layout_height="76dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/puntosdeventatxt"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            app:srcCompat="@drawable/_986701_online_shop_store_store_icon_112278"
            />

        <LinearLayout
            android:id = "@+id/linearLayoutPuntoVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/ImagenPuntoVenta"
            android:orientation="vertical">
            <TextView
                android:id="@+id/NombrePuntoVentaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/puntosdeventatxt"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DireccionPuntoVentaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/distanciaPuntoVenta"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/HorarioPuntoVentaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/hora_entrada"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/DistanciaPuntoVentaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/distanciaPuntoVenta"
                android:textColor="@color/black"
                android:textSize="20sp" />



        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>